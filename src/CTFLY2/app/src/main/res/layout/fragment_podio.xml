<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragment.PodioFragment">

    <TextView
        android:id="@+id/tab_number"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/black_rectangle"
        android:gravity="center"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#FFF"
        app:layout_constraintBottom_toTopOf="@+id/listUser"
        app:layout_constraintEnd_toStartOf="@+id/tab_user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.643" />

    <TextView
        android:id="@+id/tab_user"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginEnd="148dp"
        android:background="@drawable/black_rectangle"
        android:ems="10"
        android:gravity="center"
        android:text="Username"
        android:textAlignment="center"
        android:textColor="#FFF"
        app:layout_constraintBottom_toTopOf="@+id/listUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.643" />

    <TextView
        android:id="@+id/tab_punteggio"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/black_rectangle"
        android:ems="10"
        android:gravity="center"
        android:text="Punteggio"
        android:textAlignment="center"
        android:textColor="#FFF"
        app:layout_constraintBottom_toTopOf="@+id/listUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.643" />

    <ListView
        android:id="@+id/listUser"
        android:layout_width="315dp"
        android:layout_height="360dp"
        android:background="@drawable/tab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.738">

    </ListView>

    <EditText
        android:id="@+id/searchUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:height="40dp"
        android:ems="10"
        android:hint="cerca "
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <ImageButton
        android:id="@+id/searchUserList"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_search_white"
        app:layout_constraintBottom_toTopOf="@+id/tab_punteggio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/searchUser"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055"
        android:background="@drawable/black_sphere"/>

</androidx.constraintlayout.widget.ConstraintLayout>
