		<class>model.tipiSegn.SegnGenerica</class>
		<class>model.tipiSegn.SegnSpoiler</class>
		<properties>
			<property name="java.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/database?serverTimezone=Europe/Rome"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

		<!--	    <property name="hbm2ddl.auto" value="updata"/>-->
			   <!-- <property name="hbm2ddl.auto" value="updata"/>-->

 		 <property name="hbm2ddl.auto" value="create"/>
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
